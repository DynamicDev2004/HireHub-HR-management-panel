@model AdminParentModel

<title>@ViewData["Title"] - ADMIN PANEL</title>
<!-- MAIN HERO SECTION -->
<div class="bg-gradient-to-r from-[#0f0f0f] to-black from-10% to-60% w-screen min-h-screen flex justify-between px-1 md:px-28 pt-[80px] gap-9 flex-wrap">
    <!-- HEAD SECTION -->
    <div class="mt-6 lg:mt-12 w-full flex flex-col lg:flex-row justify-between gap-6 lg:gap-9 items-center">
        <!-- Left SIDE -->
        <div class="flex flex-col">
            <h4 class="text-white font-light text-[16pt] sm:text-[18pt] m-0">Hello</h4>
            <h4 class="bg-gradient-to-r from-[#00bfff] to-[#003989] text-transparent bg-clip-text font-semibold text-[36pt] sm:text-[50pt] m-[-3px]">
                @Context.Session.GetString("UserName")
            </h4>
        </div>

        <!-- Right Side -->
        <div class="flex gap-4 flex-wrap justify-center">
            <!-- Applications Submitted CARD -->
            <div class="w-36 h-36 sm:w-44 sm:h-44 rounded-3xl bg-gradient-to-r from-[#0083de] to-[#0044a1] p-3 relative">
                <h2 class="text-[8pt] sm:text-[10pt] font-light text-white">Applications Submitted</h2>
                <h1 class="text-[28pt] sm:text-[36pt] font-regular text-white">@Model.ApplicationsSubmitted</h1>
                <a asp-action="AllApplications" asp-controller="Applicant" class="absolute left-3 bottom-3 border w-max p-1 text-xs px-3 text-white rounded-full hover:text-[#008ded] hover:bg-white hover:transition cursor-pointer">
                    View Details
                </a>
            </div>

            <!-- Active Vacancies Card -->
            <div class="w-36 h-36 sm:w-44 sm:h-44 rounded-3xl bg-[#161616] p-3 relative">
                <h2 class="text-[8pt] sm:text-[10pt] font-light text-white">Active Vacancies Listed</h2>
                <h1 class="text-[28pt] sm:text-[36pt] font-regular text-white">@Model.jobsdata.Count</h1>
                <a asp-action="Index" asp-controller="Job" class="absolute left-3 bottom-3 border w-max p-1 text-xs px-3 text-white rounded-full hover:text-[#008ded] cursor-pointer">
                    View Details
                </a>
            </div>

            <!-- Total Staff Card -->
            <div class="w-36 h-36 sm:w-44 sm:h-44 rounded-3xl bg-[#161616] p-3 relative">
                <h2 class="text-[8pt] sm:text-[10pt] font-light text-white">Total Staff</h2>
                <h1 class="text-[28pt] sm:text-[36pt] font-regular text-white">@Model.TotalStaff</h1>
                <a asp-action="AllStaffData" asp-controller="Staff" class="absolute left-3 bottom-3 border w-max p-1 text-xs px-3 text-white rounded-full hover:text-[#008ded] cursor-pointer">
                    View Details
                </a>
            </div>
        </div>
    </div>

