@model UserLoginModel
@{

    <div class="bg-gradient-to-r from-[#0f0f0f] to-black from-10% to-60% w-screen h-screen items-center flex justify-center ">

        <div class="w-2/3 max-w-[370px] h-[65%] rounded-2xl bg-[#161616] flex items-center justify-evenly p-6 flex-col">
            <img src="~/assets/logo-02.svg" alt="" width="150px">
            <h4 class="font-bold text-white text-[15pt]">Sign In</h4>


            <form method="post" class="flex flex-col w-full px-2" asp-action="login">

                <label asp-for="UserEmail" class="text-white text-xs">Email</label>
                <input asp-for="UserEmail"
                       class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                       placeholder="Enter Your Email"></input>
                <span asp-validation-for="UserEmail"  class="text-red-600 text-[8pt] mt-1"></span>
                <span class="flex flex-col">
                    <label asp-for="Password" class="text-white text-xs mt-5">Password</label>
                    <input asp-for="Password" type="password" class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                           placeholder="Enter Your Password"> </input>
                    <a asp-action="ForgetPassword" class="text-[8pt] mt-2 text-[#008ded] hover:underline w-max">Forget Password</a>
                    <span asp-validation-for="Password" class="text-red-600 text-[8pt] mt-1"></span>
                </span>
                <span class="mt-16 w-full flex justify-center gap-5">
                    <a asp-action="signup"
                       class=" border w-max  p-1 text-xs px-3 text-white rounded-full text-[10pt] flex hover:bg-white hover:text-black cursor-pointer transition">
                        Register
                    </a>
                    <button type="submit"
                            class=" border border-[#008ded] w-max  p-1 text-xs px-3 text-white bg-[#008ded] rounded-full text-[10pt] flex hover:bg-transparent hover:text-[#008ded] cursor-pointer transition">
                        Login
                    </button>
                </span>
            </form>


        </div>

    </div>
}