@model User

@{

        <div class="bg-gradient-to-r from-[#0f0f0f] to-black from-10% to-60% w-screen h-screen items-center flex justify-center">

            <div class="w-2/3 max-w-[600px] min-w-[350px] rounded-2xl bg-[#161616] flex items-center justify-evenly p-6 py-8 mt-8 flex-col">
                <img src="~/assets/logo-02.svg" alt="" width="150px">
                <h4 class="font-bold text-white text-[15pt] my-6">Sign Up</h4>

                <form method="post" enctype="multipart/form-data" asp-action="signup" class="flex flex-col w-full px-2">

                    <div class="flex gap-5 items-center flex-wrap flex-1">

                        <span class="flex flex-col flex-1">
                            <label asp-for="UserName" class="text-white text-xs">User Name</label>
                            <input asp-for="UserName"
                                   class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                                   placeholder="Enter Your User Name" />
                            <span asp-validation-for="UserName" class="text-red-600 text-[8pt] mt-1"></span>
                        </span>

                        <span class="flex flex-col flex-1">
                            <label asp-for="UserEmail" class="text-white text-xs">Email</label>
                            <input asp-for="UserEmail"
                                   class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                                   placeholder="Enter Your Email" />
                            <span asp-validation-for="UserEmail" class="text-red-600 text-[8pt] mt-1"></span>
                        </span>

                    </div>

                    <label asp-for="UserPassword" class="text-white text-xs mt-5">Password</label>
                    <input asp-for="UserPassword" type="password"
                           class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                           placeholder="Enter Your Password" />
                    <span asp-validation-for="UserPassword" class="text-red-600 text-[8pt] mt-1"></span>


                    <label asp-for="UserContactNo" class="text-white text-xs mt-5">Contact No</label>
                    <input asp-for="UserContactNo"
                           class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                           placeholder="Enter Your Contact Number" />
                    <span asp-validation-for="UserContactNo" class="text-red-600 text-[8pt] mt-1"></span>

                    <div class="flex gap-5 items-center flex-wrap flex-1">

                        <span class="flex flex-col flex-1">
                            <label asp-for="UserProfileImageFile" class="text-white text-xs mt-5">Profile Picture</label>
                            <input asp-for="UserProfileImageFile" accept="image/png, image/gif, image/jpeg"
                                   class="bg-[#ffffff13] text-white w-full outline-none rounded-full text-xs p-1 px-2 mt-1 file:bg-transparent file:text-white file:rounded-full file:border file:border-[#ffffff4d] file:px-2 file:py-1 hover:file:bg-[#ffffff4d] cursor-pointer" />
                        </span>

                        <span class="flex flex-col flex-1">
                            <label asp-for="UserLocation" class="text-white text-xs mt-5">Location</label>
                            <input asp-for="UserLocation"
                                   class="bg-[#ffffff13] text-white outline-none rounded-full text-xs p-2 px-3 mt-1"
                                   placeholder="Enter Your Location" />
                            <span asp-validation-for="UserLocation" class="text-red-600 text-[8pt] mt-1"></span>
                        </span>

                    </div>



                    <span class="mt-11 w-full flex justify-center gap-5">
                        <a asp-action="login"
                                class="border w-max p-1 text-xs px-3 text-white rounded-full text-[10pt] flex hover:bg-white hover:text-black cursor-pointer transition">
                            Login
                        </a>
                        <button type="submit"
                                class="border border-[#008ded] w-max p-1 text-xs px-3 text-white bg-[#008ded] rounded-full text-[10pt] flex hover:bg-transparent hover:text-[#008ded] cursor-pointer transition">
                            Register
                        </button>
                    </span>
                </form>
            </div>
        </div>

    }
